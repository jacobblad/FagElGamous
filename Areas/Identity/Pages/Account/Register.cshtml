@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    var roles = (List<IdentityRole>)ViewData["roles"];
}
<section>
    <div id="container_demo">
        @*hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4  *@
        <a class="hiddenanchor" id="toregister"></a>
        <a class="hiddenanchor" id="tologin"></a>
        <div id="wrapper">
            <div id="login" class="animate form">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" action="mysuperscript.php" autocomplete="on" id="account">
                    <h4>Create a new account.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" for="emailsignup" class="youmail" data-icon="e">Email:</label>
                        <input asp-for="Input.Email" class="form-control" id="emailsignup" name="emailsignup" required="required" type="email" placeholder="mysupermail@mail.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" for="password" class="youpasswd" data-icon="p">Password:</label>
                        <input asp-for="Input.Password" class="form-control" id="password" name="password" required="required" type="password" placeholder="eg. X8df!90EO" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword" for="password" class="youpasswd" data-icon="p"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" id="password" name="password" required="required" type="password" placeholder="Confirm Password"/>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Name">Role</label>
                        <select asp-for="Input.Name" class="form-control" asp-items='new SelectList(roles,"Id","Name")'>
                        </select>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
            <div class="col-md-6 col-md-offset-2">
