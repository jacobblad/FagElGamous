@using FagElGamous.Models.ViewModels
@model List<UserRoleViewModel>

@{ 
    var roleId = ViewBag.roleId;
}
<center>
    <form method="post">
        <div>
            <div>
                <h2>Add or remove users from this role</h2>
            </div><br />
            <div >
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div>
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].Email" />
                        <label asp-for="@Model[i].IsSelected" style="color:white">@Model[i].Email</label>
                        <input asp-for="@Model[i].IsSelected" />
                    </div>
                }
            </div>
            <div><br />
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="EditRole" asp-route-id="@roleId" style="width:auto">Cancel</a>
            </div>
        </div>
    </form>
</center>